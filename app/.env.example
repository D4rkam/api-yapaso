# ===========================================
# YA PASO API - CONFIGURACIÓN DE ENTORNO
# ===========================================

# Configuración de Base de Datos
# ------------------------------
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=yapaso_db
DB_USER=root
DB_PASSWORD=your_secure_password_here

# Configuración de Seguridad
# ---------------------------
# IMPORTANTE: Cambia estas claves en producción
SECRET_KEY=your_super_secret_key_change_this_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configuración de la Aplicación
# -------------------------------
PROJECT_NAME=Ya Paso API
API_V1_STR=/api
APP_DEBUG=false

# Integración con MercadoPago
# ---------------------------
# Obtén tu token desde: https://www.mercadopago.com.ar/developers/
MERCADO_PAGO_TOKEN=your_mercadopago_access_token_here

# Configuración de Firebase (opcional)
# ------------------------------------
# Si usas Firebase, añade aquí tus configuraciones
# FIREBASE_PROJECT_ID=your_project_id
# FIREBASE_PRIVATE_KEY_ID=your_private_key_id
# FIREBASE_PRIVATE_KEY=your_private_key
# FIREBASE_CLIENT_EMAIL=your_client_email
# FIREBASE_CLIENT_ID=your_client_id
# FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
# FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# Configuración de Logging (opcional)
# -----------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Configuración de CORS (opcional)
# --------------------------------
# Para producción, especifica los dominios permitidos
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# ALLOWED_METHODS=GET,POST,PUT,DELETE
# ALLOWED_HEADERS=*

# Configuración de Rate Limiting (opcional)
# -----------------------------------------
# RATE_LIMIT_PER_MINUTE=60
# RATE_LIMIT_BURST=10

# ===========================================
# INSTRUCCIONES:
# 1. Copia este archivo como app/.env
# 2. Modifica los valores según tu entorno
# 3. NUNCA subas el archivo .env a Git
# ===========================================